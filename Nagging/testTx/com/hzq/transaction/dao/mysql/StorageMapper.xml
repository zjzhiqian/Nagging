<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzq.transaction.dao.StorageMapper">
	<select id="getStorage" parameterType="int" resultType="com.hzq.transaction.entity.Storage">
		select * from storage where id=#{id}
	
	</select>
	
	<update id="BaseUpdate" parameterType="com.hzq.transaction.entity.Storage">
		update storage set leftnum=#{leftnum} where id=#{id}
	</update>
</mapper>
